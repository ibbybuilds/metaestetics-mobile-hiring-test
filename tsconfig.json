{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@components/*": ["./src/components/*"],
      "@screens/*": ["./src/screens/*"],
      "@navigation/*": ["./src/navigation/*"],
      "@store/*": ["./src/store/*"],
      "@services": ["./src/services/index"],
      "@services/*": ["./src/services/*"],
      "@utils/*": ["./src/utils/*"],
      "@types": ["./src/types/index"],
      "@types/*": ["./src/types/*"],
      "@theme": ["./src/theme/index"],
      "@theme/*": ["./src/theme/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
