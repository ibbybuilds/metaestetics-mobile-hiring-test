{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@screens/*": [
        "./src/screens/*"
      ],
      "@navigation/*": [
        "./src/navigation/*"
      ],
      "@store/*": [
        "./src/store/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@services": [
        "./src/services"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@types/*": [
        "./src/types/*"
      ],
      "@types": [
        "./src/types"
      ],
      "@theme/*": [
        "./src/theme/*"
      ],
      "@theme": [
        "./src/theme"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
